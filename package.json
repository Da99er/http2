{
    "name": "react-server-start-kit",
    "version": "1.0.0",
    "description": "",
    "main": "server.js",
    "scripts": {
        "lint": "eslint --fix . && stylelint **/*.scss",
        "test": "echo \"no tests\"",
        "start": "MODE=development node ./src/server.js",
        "prod": "MODE=production node ./src/server.js",
        "dev": "MODE=development SET=one webpack --config ./src/webpack.config.js --progress --watch",
        "build": "MODE=production SET=two webpack --config ./src/webpack.config.js --progress",
        "build:analyzer": "MODE=production ANALYZER=true webpack --config ./src/webpack.config.js --progress"
    },
    "lint-staged": {
        "**/*.js": [
            "eslint --fix",
            "git add"
        ],
        "**/*.scss": [
            "stylelint",
            "git add"
        ],
        "**/*.{json,scss}": [
            "prettier --write",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && npm test",
            "pre-push": "npm test"
        }
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
