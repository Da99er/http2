{
    "name": "react-server",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "lint": "eslint --fix . && stylelint **/*.scss",
        "test": "echo \"no tests\"",
        "start": "MODE=development DOMAIN_NAME='my-own-site.cot' node ./src/index.js",
        "prod": "MODE=production DOMAIN_NAME='my-own-site.cot' node ./src/index.js"
    },
    "lint-staged": {
        "**/*.js": [
            "eslint --fix",
            "git add"
        ],
        "**/*.scss": [
            "stylelint",
            "git add"
        ],
        "**/*.{json,scss}": [
            "prettier --write",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && npm test",
            "pre-push": "npm test"
        }
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "babel-eslint": "^10.1.0",
        "eslint": "^6.8.0",
        "eslint-plugin-babel": "^5.3.0",
        "eslint-plugin-jest": "^23.8.2",
        "eslint-plugin-react": "^7.19.0",
        "eslint-watch": "^6.0.1",
        "file-loader": "^6.0.0",
        "husky": "^4.2.3",
        "lint-staged": "^10.0.8",
        "npm-check-updates": "^4.0.4",
        "prettier": "^2.0.1"
    },
    "dependencies": {
        "formidable": "^1.2.2",
        "jsonwebtoken": "^8.5.1",
        "mongoose": "^5.9.5",
        "multiparty": "^4.2.1",
